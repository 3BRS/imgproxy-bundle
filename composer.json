{
    "name": "3brs/imgproxy-bundle",
    "type": "symfony-bundle",
    "description": "Imgproxy integration for Liip Imagine Bundle - replaces image processing with imgproxy",
    "keywords": [
        "symfony",
        "symfony-bundle",
        "imgproxy",
        "liip-imagine",
        "image-processing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "3BRS",
            "email": "team@3brs.com"
        }
    ],
    "require": {
        "php": "^8",
        "symfony/config": "^5.4 || ^6.0 || ^7.0",
        "symfony/dependency-injection": "^5.4 || ^6.0 || ^7.0",
        "symfony/http-kernel": "^5.4 || ^6.0 || ^7.0",
        "symfony/string": "^5.4 || ^6.0 || ^7.0",
        "symfony/translation-contracts": "^2.5 || ^3.0",
        "liip/imagine-bundle": "^2.0"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^12.1",
        "phpstan/phpstan": "^1.10|^2.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-symfony": "^1.3|^2.0",
        "phpunit/phpunit": "^9.6|^10.0|^11.0",
        "deptrac/deptrac": "^2.0",
        "rector/rector": "^1.0",
        "symfony/yaml": "^5.4 || ^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "ThreeBRS\\ImgproxyBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ThreeBRS\\ImgproxyBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite=\"Unit Tests\"",
        "test-integration": "phpunit --testsuite=\"Integration Tests\"",
        "test-coverage": "phpunit --coverage-html=var/coverage",
        "ecs": "ecs check",
        "ecs-fix": "ecs check --fix",
        "phpstan": "phpstan analyse",
        "phpstan-baseline": "phpstan analyse --generate-baseline",
        "deptrac": "deptrac analyse --cache-file=var/cache/deptrac.cache",
        "rector": "rector process --dry-run",
        "rector-fix": "rector process"
    },
    "suggest": {
        "infection/infection": "Mutation testing framework (requires PHP 8.1+)"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
